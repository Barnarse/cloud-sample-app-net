@model IEnumerable<DancingGoat.Models.Article>
@{
    ViewBag.Title = Resources.DancingGoat.Articles;
    var i = 1;
}

<style>
    .article-thumbnails__container {
        margin-top: 40px;        
    }    
</style>

<h1 class="logo">
    @Resources.DancingGoat.ReadAboutCoffee
</h1>

<div class="col-lg-12 article-thumbnails__container">
    @foreach (var article in Model)
    {
        @Html.DisplayFor((vm) => article)
        if (i % 4 == 0)
        {
            <div class="clear"></div>
        }
        i++;
    }
</div>