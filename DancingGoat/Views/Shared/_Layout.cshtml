@using System.Configuration
<!DOCTYPE html>

<html>
<head id="head">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="UTF-8" />
    <title>@ViewBag.Title - Dancing Goat</title>
    <link href="@Url.Content("~/Content/Styles/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="page-wrap">
        <header class="header" role="banner">
            <div class="menu">
                <div class="container">
                    <div class="menu__company-name">@Html.ActionLink(Resources.DancingGoat.CompanyName, "Index", "Home")</div>
                    <nav role="navigation" class="menu__navigation">
                        <ul>
                            <li>
                                @Html.ActionLink(Resources.DancingGoat.Coffee, "Index", "Coffees")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.DancingGoat.Articles, "Index", "Articles")
                            </li>                            
                            <li>
                                @Html.ActionLink(Resources.DancingGoat.Partnership, "Index", "Partnership")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.DancingGoat.FindStore, "Index", "Cafes")
                            </li>                            
                        </ul>
                    </nav>
                </div>
            </div>
            <div id="message-box" class="container message">
                @Html.Partial("~/Areas/Admin/Views/Shared/_MessagesPartial.cshtml")
            </div>
        </header>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <div class="footer-wrapper">
        <footer role="contentinfo">
            <div class="footer-container">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-lg-4 footer-col">
                            <p>
                                @Html.Action("CompanyAddress", "Home")
                            </p>
                        </div>
                        <div class="col-md-4 col-lg-4 footer-col">
                            <h3>@Resources.DancingGoat.FollowUs_Title</h3>
                            <a class="followus-link" href="https://www.facebook.com/Dancing.Goat" target="_blank">
                                <img alt="@Resources.DancingGoat.FollowUsOnFacebook" class="" src="~/Content/Images/facebook-icon.png" title="@Resources.DancingGoat.FollowUsOnFacebook">
                            </a>
                            <a class="followus-link" href="https://twitter.com/DancingGoat78" target="_blank">
                                <img alt="@Resources.DancingGoat.FollowUsOnTwitter" class="" src="~/Content/Images/twitter-icon.png" title="@Resources.DancingGoat.FollowUsOnTwitter">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container copyright">
                Copyright &copy; @DateTime.Now.Year Dancing Goat. All rights reserved.
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        !function(){var a='https://engage-ket.kenticocloud.com/js',b=document,c=b.createElement('script'),d=b.getElementsByTagName('script')[0];c.type='text/javascript',c.async=!0,c.defer=!0,c.src=a+'?d='+document.domain,d.parentNode.insertBefore(c,d)}(),window.ket=window.ket||function(){(ket.q=ket.q||[]).push(arguments)};
        ket('start', '@ConfigurationManager.AppSettings["ProjectId"]');
    </script>
</body>
</html>