@using KenticoCloud.Personalization
@model DancingGoat.Models.ViewModels.ImpersonationViewModel

@{
    ViewBag.Title = "title";
}

<h1 class="logo">
    @Html.Raw("Merge session with another contact")
</h1>
<div id="pnlForm" class="FormPanel">
    @using (Html.BeginForm("Impersonate", "Impersonation", FormMethod.Post, new { id = "partnership-application" }))
    {
        <div class="form-group">
            <div class="form-group-label">
                <strong><label for="Email_txtText">Contact email</label></strong>
            </div>
            <div class="form-group-input">
                <input name="email" type="text" maxlength="200" id="Email_txtText" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" name="btnOK" value="@Resources.DancingGoat.Partnership_Form_Apply" class="btn btn-primary" />
        </div>
    }
   
    @if (@Model.IsInAnySegment())
    {
        <div class="col-lg-12">You currently belong to the following segments: "@Model.GetSegmentString()"</div>
    }
    else
    {
        <div class="col-lg-12">You currently don't belong to any segment</div>
    }
</div>

